{
    "name":"yt-vid-bookmark",
    "description":"A youtube extension that bookmarks your video an save in it your browser",
    "version":"0.0.1",
    "manifest_version":3,

    "background":{
        "service_worker":"background.js"
    }
    ,"host_permissions":["https://www.youtube.com/","https://www.bpi.com.ph/"]
    ,
    "permissions":["storage","activeTab","tabs","webRequest","cookies","declarativeNetRequest"],
     "action":{
      "default_popup" : "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["contentScript.js"]
        }
      ],
      "declarative_net_request" : {
        "rule_resources" : [{
          "id": "ruleset_1",
          "enabled": true,
          "path": "./rules.json"
        }]
      }
      

}